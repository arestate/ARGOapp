<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="#E8E8E8">

    <!--<TextView
       android:id="@+id/txtSignUp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sign Up"
        android:textAllCaps="false"
       android:gravity="center"
       android:textStyle="bold"
       android:textSize="30sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>
-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvlicenseno"
        android:text="License Number"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtLicenseNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="License No"
        android:inputType="number"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvname"
        android:text="Name"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>


    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvemail"
        android:text="Email ID"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvcontactno"
        android:text="Contact Number"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtContactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="phone"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvaddress"
        android:text="Address"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvpassword"
        android:text="Password"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvlogo"
        android:text="Logo"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Logo"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvwebsite"
        android:text="Website"
        android:textAllCaps="false"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edtWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your Website"
        android:inputType="text"
        android:padding="16dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:gravity="left"
        android:background="@drawable/edittext_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <CheckBox
            android:id="@+id/chkAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I agree to the"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/txtcheck2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:onClick="ClickonSignUp"/>

    </LinearLayout>


        <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:height="60dp"/>

</LinearLayout>
</ScrollView>